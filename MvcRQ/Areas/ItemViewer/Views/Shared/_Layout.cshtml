<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />

    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/pure-0.2.0/pure-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/riquest.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.transform.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var config = { contextPath: '@Url.Content("~")' };

        function HostAdress() {
            return ((config.contextPath.length > 0) && (config.contextPath.charAt(config.contextPath.length - 1)) == "/") ? config.contextPath.substring(0, config.contextPath.length - 1) : config.contextPath;
        }
    </script>
</head>
<body>
    <div id="content" class="pure-g-r">
        <div id="header" class="pure-u-1">
           <div>
                <h1>@RQResources.Views.Shared.SharedStrings.title</h1>
            </div>
        </div>
        <div id="nav" class="pure-u-1">
            <div class=" rq-menu pure-menu pure-menu-open pure-menu-horizontal">
                <ul>
@*                    <li class="pure-menu-selected">@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu1, "Index", "RQItems")</li>
                    <li class="pure-menu-heading">|</li>
                    <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu3, "Index", "RQKos")</li>
                    <li class="pure-menu-heading">|</li>
                    <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu2, "About", "Home")</li>*@
                </ul>
            </div>
        </div>
        <div id="main" class="pure-u-1">
            @RenderBody()
        </div>
        <div id="footer" class="pure-u-1">
            <div class="rq-instructions">
                <p>Copyright 2002 - 2013 by Jürgen Bunzel </p>
            </div>
            <div class="rq-instructions">@Html.Partial("_LogOnPartial")</div>
        </div>
    </div>
</body>
</html>
