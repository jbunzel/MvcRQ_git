@model MvcRQ.Areas.ItemViewer.Models.ItemViewerModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/pure-0.2.0/pure-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/riquest.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/ItemViewer/Scripts/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.transform.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/HtmlFactoryScripts/rqui-helpers.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var config = { contextPath: '@Url.Content("~")' };

        function HostAdress() {
            return ((config.contextPath.length > 0) && (config.contextPath.charAt(config.contextPath.length - 1)) == "/") ? config.contextPath.substring(0, config.contextPath.length - 1) : config.contextPath;
        }
    </script>
</head>
<body>
    <div id="content" class="pure-g-r">
        <div class="pure-u-1">
            <div id="nav" class="pure-g-r">
                <div class=" pure-u-1-2 rq-logo">
                    <h1>@RQResources.Views.Shared.SharedStrings.title</h1><span><img src="@Href("~/images/bluepixel.gif")" alt="" border="0" width="15" height="15"/></span><h2>@RQResources.Views.Shared.SharedStrings.subtitle</h2>
                </div>
                <div class="pure-u-1-2 rq-menu">
                    <ul class="pure-menu-horizontal">
@*                        <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu1, "Index", "RQItems")</li>
                        <li><img src="@Href("~/images/clearpixel.gif")" alt="" /></li>
                        <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu3, "Index", "RQKos")</li>
                        <li><img src="@Href("~/images/clearpixel.gif")" alt="" /></li>
                        <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu4, "Index", "RQKos")</li>
                        <li><img src="@Href("~/images/clearpixel.gif")" alt="" /></li>
                        <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu5, "Index", "RQKos")</li>
                        <li><img src="@Href("~/images/clearpixel.gif")" alt="" /></li>
                        <li>@Html.ActionLink(RQResources.Views.Shared.SharedStrings.menu2, "About", "Home")</li>*@
                    </ul>
                </div>
            </div>
        </div>
        <div id="main" class="pure-u-1">
            <div  id="viewport" class="pure-g-r">
                <div class="pure-u-2-3">
                    @RenderBody()
                </div>
                <div class="pure-u-1-3">
                    <div class="pure-g-r">
                        <div class="pure-u-4-5">
                            <div class="rq-sidebar rq-right-sidebar">
                                <div class="rq-settings-panel">
                                    <h3>Bibliographische Information</h3>
                                    @(new HtmlString(Model.BibInfo()))    
                                </div>
                            </div>
                        </div>
                        <div class=" pure-u-1-5">
                            <div class="rq-sidebar rq-right-sidebar rq-banner"></div>
                        </div>
                    </div>
                    <div id="footer">
                        <div class="rq-instructions">
                            <div class="rq-instructions">
                                <a href="">@RQResources.Views.Shared.SharedStrings.link_home</a> <span class="accent">&nbsp;|&nbsp;</span>
				                <a href="">@RQResources.Views.Shared.SharedStrings.link_terms</a> <span class="accent">&nbsp;|&nbsp;</span>
				                <a href="">@RQResources.Views.Shared.SharedStrings.link_privacy</a> <span class="accent"></a><br />
                            </div>
  				            <span id="copyright" class="smallcomment">Copyright 2002-2014 by <a href="http://www.jbunzel.de/jb/">Jürgen Bunzel</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
