@model MvcRQ.Areas.ItemViewer.Models.AudioModel
@*css*@
<link href="@Url.Content("~/areas/itemviewer/skins/blue.monday/jplayer.blue.monday.css")" rel="stylesheet" type="text/css" />  
@MvcRQ.Areas.ItemViewer.ItemViewerHtml.StyleCss() @*recommended - info message and some layout css styles*@
@*javascript*@
<script src="@Url.Content("~/scripts/htmlFactoryScripts/rqui-helpers.js")" type="text/javascript"></script>
<script src="@Url.Content("~/areas/itemviewer/Scripts/jquery.jplayer.min.js")" type="text/javascript"></script>
@MvcRQ.Areas.ItemViewer.ItemViewerHtml.AudioPlayerJavascript()@*required - user interface javascript code including tablesorter, pager and user interface code*@
@{
    ViewBag.Title = "Audio Player";
}
<h2>Audio Player</h2>
<script type="text/javascript">
    var docNo = @Html.Raw(Json.Encode(@ViewBag.DocNo));
    var docAdr = @Html.Raw(Json.Encode(@ViewBag.DocAdr));
    var playList = @Html.Raw(Json.Encode(Model.PlayList.Tracks));
</script>
<div id="bib_info_area">
    @(new HtmlString(Model.BibInfo()))    
</div>
@*html markup*@
@{
    if (ViewBag.DocAdr == "PLAYLIST") {
        @MvcRQ.Areas.ItemViewer.ItemViewerHtml.AudioPlaylistHtml();
    }
    else {
        @MvcRQ.Areas.ItemViewer.ItemViewerHtml.AudioPlayerHtml();
    }
}