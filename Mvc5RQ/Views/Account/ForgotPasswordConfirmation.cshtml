<!-- FORGOT-PASSWORD-CONFIRM-HTML -->
<link href="@Url.Content("~/Content/themes/rq-standard/paging-style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/HtmlFactoryScripts/rqui-helpers.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.pajinate.js")" type="text/javascript"></script>

@{
    ViewBag.Title = RQResources.Views.Shared.SharedStrings.am_forgot_password_confirm;
}
<div class="pure-g">
    <div class="pure-u-1 pure-u-md-4-5">
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-6">
                <div class="rq-sidebar rq-left-sidebar">
                    @*@Html.Partial("~/Views/Account/SmallLogOn.cshtml")*@
                </div>
            </div>
            <div class="pure-u-1 pure-u-md-5-6">
                <script type="text/javascript">
                    $(document).ready(function () {
                        resizeToWindowHeight();
                    });
                </script>
                <div id="htmlList" class="rq-result-box">
                    <div id="paging_container" class="pure-g container">
                        <div class="rq-ajax-wait" style="display: none"></div>
                        <div class="paging_info">
                            <span class="info_text"></span>
                            <span class="result_segments" style="display: none">
                                <select id="segmentSelector"></select>
                            </span>
                        </div>
                        <div class="pure-u-1 page_navigation"></div>
                        <div class="pure-u-1 content-box">
                            <div class="rq-result-box rq-textcontainer">
                                <h2>@ViewBag.Title</h2>
                                <h4>@RQResources.Views.Shared.SharedStrings.am_forgot_password_confirm_text</h4>
                                <hr />
                                <div class="rq-form-explanation"></div>
                                @*<p class="text-danger">
                                        For DEMO only: You can click this link to confirm the email: <a href="@ViewBag.Link">link</a>
                                        Please change this code to register an email service in IdentityConfig to send an email.
                                    </p>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-5">
        <div class="rq-sidebar rq-right-sidebar">
        </div>
        @Html.Partial("~/Views/Shared/Footer.cshtml")
    </div>
</div>