@model Mvc5RQ.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<link href="@Url.Content("~/Scripts/HtmlFactoryScripts/paging-style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/HtmlFactoryScripts/rqui-helpers.js")" type="text/javascript"></script>
<div class="pure-g">
    <div class="pure-u-4-5">
        <div class="pure-g">
            <div class="pure-u-1-6">
                <div class="rq-sidebar rq-left-sidebar">
                    <div id="rq-settings-panel">
                    </div>
                </div>
            </div>
            <div class="pure-u-5-6">
                <script type="text/javascript">
                    $(document).ready(function () {
                        resizeToWindowHeight();
                    });
                </script>
                <div id="htmlList" class="rq-result-box">
                    <div id="paging_container" class="container">
                        <div class="rq-ajax-wait" style="display: none"></div>
                        <div>
                            <h2>@ViewBag.Title.</h2>

                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Reset your password.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "" })
                                @*@Html.HiddenFor(model => model.Code)*@
                                <div class="">
                                    @Html.LabelFor(m => m.Email, new { @class = "editor-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "editor-value" })
                                    </div>
                                </div>
                                <div class="">
                                    @Html.LabelFor(m => m.Password, new { @class = "editor-label" })
                                    <div class="">
                                        @Html.PasswordFor(m => m.Password, new { @class = "editor-value" })
                                    </div>
                                </div>
                                <div class="">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "editor-label" })
                                    <div class="">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "editor-value" })
                                    </div>
                                </div>
                                <div class="">
                                    <div class="">
                                        <input type="submit" class="pure-button" value="Reset" />
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="pure-u-1 page_navigation"></div>
                        <div class="pure-u-1" style="margin:15px">
                            @Html.Raw(ViewBag.HTML)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pure-u-1-5">
        <div class="pure-g">
            <div class="pure-u-4-5">
                <div class="rq-sidebar rq-right-sidebar">
                </div>
            </div>
            <div class=" pure-u-1-5">
                <div class="rq-sidebar rq-right-sidebar rq-banner"></div>
            </div>
        </div>
        @Html.Partial("~/Views/Shared/Footer.cshtml")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
