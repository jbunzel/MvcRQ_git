<!-- RESET-PASSWORD-HTML -->
<link href="@Url.Content("~/Content/themes/rq-standard/paging-style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/HtmlFactoryScripts/rqui-helpers.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.pajinate.js")" type="text/javascript"></script>

@model Mvc5RQ.Models.ResetPasswordViewModel
@{
    ViewBag.Title = RQResources.Views.Shared.SharedStrings.am_reset;
}
<div class="pure-g">
    <div class="pure-u-1 pure-u-md-4-5">
        <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-6">
                <div class="rq-sidebar rq-left-sidebar">
                    @*@Html.Partial("~/Views/Account/SmallLogOn.cshtml")*@
                </div>
            </div>
            <div class="pure-u-1 pure-u-md-5-6">
                <script type="text/javascript">
                    $(document).ready(function () {
                        resizeToWindowHeight();
                    });
                </script>
                <div id="htmlList" class="rq-result-box">
                    <div id="paging_container" class="pure-g container">
                        <div class="rq-ajax-wait" style="display: none"></div>
                        <div class="paging_info">
                            <span class="info_text"></span>
                            <span class="result_segments" style="display: none">
                                <select id="segmentSelector"></select>
                            </span>
                        </div>
                        <div class="pure-u-1 page_navigation"></div>
                        <div class="pure-u-1 content-box">
                            <div class="rq-result-box rq-textcontainer">
                                <h2>@ViewBag.Title</h2>
                                <h4>@RQResources.Views.Shared.SharedStrings.am_reset_text</h4>
                                <hr />
                                <div class="rq-form-explanation" />
                                <div class="rq-formcontainer">
                                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "pure-form pure-form-aligned", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "" })
                                        @Html.HiddenFor(model => model.Code)
                                        <div class="pure-control-group">
                                            @Html.LabelFor(m => m.Email, new { @class = "control-label pure-input-1-3" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control pure-input-1-3" })
                                        </div>
                                        <div class="pure-control-group">
                                            @Html.LabelFor(m => m.Password, new { @class = "control-label pure-input-1-3" })
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control pure-input-1-3" })
                                            <div class="rq-form-field-comments">@Html.Raw(Model.PasswordExplanation)</div>
                                        </div>
                                        <div class="pure-control-group">
                                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label pure-input-1-3" })
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control pure-input-1-3" })
                                        </div>
                                        <div class="pure-controls">
                                            <input type="submit" class="pure-button" value=@RQResources.Views.Shared.SharedStrings.am_reset_button />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-5">
        <div class="rq-sidebar rq-right-sidebar">
        </div>
        @Html.Partial("~/Views/Shared/Footer.cshtml")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
